{{!-- navbar --}}
<div id="home">
  <nav class="navbar navbar-lg navbar-light nav-bg">
    <a class="navbar-brand" href="#">NY Times</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
        <a class="btn btn-primary" id="scrape">Scrape</a>
        <a class="nav-item nav-link" href="/saved">Saved</a>
        <a class="nav-item nav-link clear" href="/article/clear">Clear</a>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        {{#if article}}
        {{#each article}}
        <div class="card">
          <div class="card-heading">
            <h4><a href={{this.link}} target="_blank">{{this.title}}</a></h4>
          </div>
          <div class="card-body">
            <p> {{this.summary}}</p>
             <p class="card-text"><small>Scraped: {{this.created}} Time: {{this.articleTime}}</small></p>
            <button type="button" class="btn btn-success saveArticle" id={{this.saved}} data-id={{this._id}}>Save</button>
          </div>
        </div>
        {{/each}}
        {{/if}}
      </div>
    </div>
  </div>
</div>